{
  "kind": "collectionType",
  "collectionName": "global_settings",
  "info": {
    "singularName": "global-setting",
    "pluralName": "global-settings",
    "displayName": "Global Settings",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page"
    },
    "site": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "cloud",
        "dotnet",
        "stratus"
      ],
      "default": "dotnet",
      "required": true
    },
    "socials": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "elements.social"
    },
    "algemeneVoorwaarden": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "straat": {
      "type": "string",
      "required": true
    },
    "postcode": {
      "type": "string",
      "required": true
    },
    "gemeente": {
      "type": "string",
      "required": true
    }
  }
}
